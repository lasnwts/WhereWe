<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:textColor="#999999"
    android:textSize="22sp">
    android:textStyle="bold">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7e7e7"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:id="@+id/recyclerViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_top_style"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:id="@+id/lin_textViewCardHeadNaME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCardHeadNaME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textViewCardHeadNaME"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/textViewHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Heading"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/cardview_dark_background"/>

            </LinearLayout>


            <TextView
                android:id="@+id/textViewCardHeadEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_textViewCardHeadNaME"
                android:text="@string/textViewCardHeadEmail"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textViewCardHeadEmail"
                android:layout_below="@+id/textViewCardHeadEmail"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi molestie nisi dui. "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/cardview_dark_background"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>